extends layout
block content
  #blog.section
    .container
      .content
        .row
          br
          br
          .title
            h2 Blog 
              img.head-img(src='images/blog.png')
            .hr.hr-small.hr-center
              span.hr-inner
            p Blog Evolution.
  if(blog)
    - var section = 1
    for entry in blog
      if(section == 1)        
        - var section = 0
        .section
          .container
            .content
              .row
                .text-block
                  .title-l
                    h3 #{entry.title}
                      .hr.hr-small.hr-left
                        span.hr-inner
                  p #{entry.article}
      else    
        - var section = 1
        .section.section-alt
          .container
            .content
              .row
                .text-block
                  .title-l
                    h3 #{entry.title}
                      .hr.hr-small.hr-left
                        span.hr-inner
                  p #{entry.article}
