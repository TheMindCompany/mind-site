extends layout

block head
  link(rel='stylesheet', href='css/main.css')
  link(rel='stylesheet', href='//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css')
  script(src='/js/jq/jquery.min.js')
  script(src='/js/jq/jquery.easing.min.js')
  script(src='/js/jq/jquery.scrollto.min.js')
  script(src='/js/jq/jquery.nav.js')
  script(src='/js/slabtext.min.js')
  script(src='/socket.io/socket.io.js')
  script(src='/js/socket.js')
  script(src='/js/main.js')

block content
  .hero.bg-fixed
    .slogan
      .vcenter.container
        .row
          .span12
            .span4
            form.span4(method='POST', action='/login')
              .title-l
                h4 Account Sign In
              input.input(name='user', placeholder='User Email', type='email', required)
              br
              input.input(name='password', placeholder='Password', type='password')
              br
              a.float-l(href='/register') Create Account
              input.btn.float-r(value='Sign In', type='submit')
              if (msg)
                br
                .hr.hr-small.hr-center
                  span.hr-inner
                br
                br
                p #{msg}
            .span4
  #footer
    &copy; 2013 The Mind Company
