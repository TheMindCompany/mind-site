  #blog.section.section-alt
    .container
      .content
        .row
          .span12
            .span4
              .title-l
                h3 
                  img.header-img(src='images/blog.png')
                  |  Blog 
                .hr.hr-small.hr-left
                  span.hr-inner
            .span7
              h4 Add
              .hr.hr-small.hr-left
                span.hr-inner
              br
              br
              br
              form(method='POST', action='/blog/post', enctype='multipart/form-data')
                if (blog_msg)
                  p #{blog_msg}
                label(for='blogaddtitle') Article Title
                input.input(name='blog_add_title', required)  
                input.input(name='blog_add_html', value="", hidden)
                br
                label(for='blog_add_date') Written On (Optional: Default current)
                br
                input.input(type='date', name='blog_add_date')
                br
                br
                label(for='blog_add_image') Article Cover Image (Optional)
                br
                input(type='file', name='blog_add_image')
                br
                br
                label(for='blog_add_article') Article Content
                #wysihtml5-toolbar(style='display: none;')
                  input.btn.btn-icon.btn-start(type='button', data-wysihtml5-command='justifyRight', data-wysihtml5-command-value='right', style='background-image:url(images/toolbar/right.png);')
                  input.btn.btn-icon.btn-mid(type='button', data-wysihtml5-command='justifyCenter', data-wysihtml5-command-value='center', style='background-image:url(images/toolbar/center.png);')
                  input.btn.btn-icon.btn-end(type='button', data-wysihtml5-command='justifyLeft', data-wysihtml5-command-value='left', style='background-image:url(images/toolbar/left.png);')
                  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                  input.btn.btn-icon.btn-start(type='button', data-wysihtml5-command='bold', style='background-image:url(images/toolbar/bold.png);')
                  input.btn.btn-icon.btn-mid(type='button', data-wysihtml5-command='italic', style='background-image:url(images/toolbar/italic.png);')
                  input.btn.btn-icon.btn-mid(type='button', data-wysihtml5-command='underline', style='background-image:url(images/toolbar/underline.png);')
                  input.btn.btn-icon.btn-mid(type='button', data-wysihtml5-command='insertUnorderedList', style='background-image:url(images/toolbar/bullets.png);')
                  input.btn.btn-icon.btn-end(type='button', data-wysihtml5-command='insertOrderedList', style='background-image:url(images/toolbar/numbers.png);')
                  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                  input.btn.btn-icon.btn-start(type='button', data-wysihtml5-command='createLink', style='background-image:url(images/toolbar/link.png);')
                  input.btn.btn-icon.btn-end(type='button', data-wysihtml5-command='insertImage', style='background-image:url(images/toolbar/picture.png);')
                  #edit-link(data-wysihtml5-dialog='createLink', style='display: none;') 
                    input.input(data-wysihtml5-dialog-field='href', value='http://', class='text') 
                    input.btn(type='button', data-wysihtml5-dialog-action='save', value='OK')   
                    &nbsp;&nbsp;
                    input.btn.btn-inverse(type='button', data-wysihtml5-dialog-action='cancel', value='Cancel')  
                  #edit-image(data-wysihtml5-dialog='insertImage', style='display: none;') 
                    input.input(data-wysihtml5-dialog-field='src', value='http://', class='text') 
                    input.btn(type='button', data-wysihtml5-dialog-action='save', value='OK')   
                    &nbsp;&nbsp;
                    input.btn.btn-inverse(type='button', data-wysihtml5-dialog-action='cancel', value='Cancel') 
                textarea#wysihtml5-textarea.input(name='blog_add_article', rows='10', cols='57')
                input.btn.float-r(type='submit', value='SUBMIT')
              h4 Edit
              .hr.hr-small.hr-left
                span.hr-inner
              form(method='POST', action='/blog/edit')
                input.btn.btn-inverse(type='button', value='SELECT')
              br
              br
              h4 Delete
              .hr.hr-small.hr-left
                span.hr-inner
              form(method='POST', action='/blog/delete')
